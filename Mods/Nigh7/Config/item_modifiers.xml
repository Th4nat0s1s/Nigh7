<Nigh7>

<set xpath="/item_modifiers/item_modifier[starts-with(@name, 'mod')]/property[@name='Stacknumber']/@value">5</set>

<append xpath="/item_modifiers/item_modifier[@name='modGunLaserSight']">
	<item_property_overrides name="gunDartPistol">
		<property name="SideOffset" value="0,.0075,.03"/>
		<property name="SideScale" value=".5,.5,.5"/>
	</item_property_overrides>
</append>

<append xpath="/item_modifiers/item_modifier[@name='modGunReflexSight']">
	<item_property_overrides name="gunDartPistol">
		<property name="ScopeOffset" value="0,.1,.08"/>
		<property name="ScopeScale" value=".05,.05,.05"/>
		<property name="ScopeCameraOffset" value="0,-0.035,0"/>
	</item_property_overrides>
</append>

<append xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']">
	<item_property_overrides name="gunDartPistol">
		<property name="BarrelOffset" value="0,0,0"/>
		<property name="BarrelScale" value =".7,.7,.7"/>
	</item_property_overrides>
</append>

</Nigh7>